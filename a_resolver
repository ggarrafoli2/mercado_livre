--A RESOLVER

--Pregunta 1:
SELECT c.*
FROM Customer c
JOIN (
  SELECT customer_id, COUNT(*) AS total_sales
  FROM Orders
  WHERE MONTH(fecha) = 1 AND YEAR(fecha) = 2020
  GROUP BY customer_id
  HAVING COUNT(*) > 1500
) AS sales ON c.id = sales.customer_id
WHERE DATE_FORMAT(c.fecha_nacimiento, '%m-%d') = DATE_FORMAT(CURRENT_DATE, '%m-%d');


--Pregunta 2:
SELECT 
    MONTH(o.fecha) AS month,
    YEAR(o.fecha) AS year,
    c.primer_nombre,
    c.apellido,
    COUNT(o.id) AS cantidad_ventas,
    SUM(od.cantidad) AS cantidad_productos_vendidos,
    SUM(od.cantidad * od.precio_unitario) AS monto_total_transaccionado
FROM 
    Orders o
JOIN 
    Order_Details od ON o.id = od.order_id
JOIN 
    Item i ON od.item_id = i.id
JOIN 
    Category c ON i.category_id = c.id
WHERE 
    c.descripcion = 'Cellphones' AND
    YEAR(o.fecha) = 2020
GROUP BY 
    YEAR(o.fecha), MONTH(o.fecha), c.primer_nombre, c.apellido
HAVING 
    ROW_NUMBER() OVER (PARTITION BY YEAR(o.fecha), MONTH(o.fecha) ORDER BY SUM(od.cantidad * od.precio_unitario) DESC) <= 5;


